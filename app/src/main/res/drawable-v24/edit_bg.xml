<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <padding
                android:bottom="7dp"
                android:left="7dp"
                android:right="7dp"
                android:top="7dp" />
            <solid
                android:color="@android:color/background_light"/>
            <corners
                android:radius="3dip"
                />
            <stroke
                android:width="5px"
                android:color="#1199EF"/>
        </shape>
    </item>
</layer-list>
